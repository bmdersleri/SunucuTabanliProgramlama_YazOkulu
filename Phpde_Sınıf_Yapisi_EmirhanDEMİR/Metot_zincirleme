<?php

class islem {
    public $sonuc = 0;
  
    function topla($sayi) {
       $this->sonuc = $this->sonuc + $sayi;
       return $this;
    }
  
    function carp($sayi) {
       $this->sonuc = $this->sonuc * $sayi;
       return $this;
    }
  
    function sonuc() {
       echo $this->sonuc;
    }
 }
  
 $x = new islem();
 $x->topla(5)->carp(10)->sonuc();
 // ekranda 50 yazar.
  
 // normal yolla yapsaydÄ±k her seferinde $x tekrar ifade etmemiz gerekirdi
